<div class="mount mount-bottom-thin">
  <div class="content shade">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-xs-4">
          <img class="logo" src="images/logo.png">
        </div>
        
        <div class="col-md-8 col-xs-8">
          <div class="well bg-white">
            {{outlet "highlight"}}
          </div>
          
          <!-- highlights -->
          <div class="row">
            <div class="col-md-3 col-xs-3">
              <figure class="featured bg-pattern">
                <span class="icon darkgrey fa fa-question"></span>
                <a class="figcaption" href="#" {{action "showHighlight" "about"}}>
                  <h4>About</h4>
                </a>
                
              </figure>
            </div>
            <div class="col-md-3 col-xs-3">
              <figure class="featured bg-pattern">
                <span class="icon darkgrey fa fa-star-o"></span>
                <a class="figcaption" href="#" {{action "showHighlight" "blog"}}>
                  <h4>Blog</h4>
                </a>
              </figure>
            </div>
            <div class="col-md-3 col-xs-3">
              <figure class="featured bg-pattern">
                <span class="icon darkgrey fa fa-flask"></span>
                <a class="figcaption" href="#" {{action "showHighlight" "projects"}}>
                  <h4>Projects</h4>
                </a>
              </figure>
            </div>
            <div class="col-md-3 col-xs-3">
              <figure class="featured bg-pattern">
                <span class="icon darkgrey fa fa-list-alt"></span>
                <a class="figcaption" href="#" {{action "showHighlight" "resume"}}>
                  <h4>Resume</h4>
                </a>
              </figure>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container">
    Don't worry, I'll use this space for something...
  </div>
</div>

